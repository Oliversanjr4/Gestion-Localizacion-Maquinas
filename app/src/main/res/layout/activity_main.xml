<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#9C27B0"

    >



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="#125FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/toolbar_custom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- Botón para volver -->
            <ImageButton
                android:id="@+id/toolbar_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="@null" />

            <!-- Texto a mostrar -->
            <TextView
                android:id="@+id/toolbar_text_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nombre de la maquina"
                android:textColor="@color/white"
                android:maxLines="1"
                android:maxWidth="300dp"

                android:ellipsize="end"
                android:textSize="24dp"

                android:layout_marginStart="8dp"/>

            <!-- Otro botón -->
            <ImageButton
                android:id="@+id/toolbar_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_more_horiz_24"
                android:background="@null"
    android:layout_marginEnd="15dp"
                />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TIL"
        android:layout_width="378dp"

        android:layout_height="62dp"

        android:background="@android:color/transparent"
        android:layout_marginTop="45dp"
        android:layout_marginStart="20dp"
        android:visibility="visible"
        android:hint="Busqueda"
        android:textColorHint="#FFFFFF"

        app:endIconMode="clear_text"
        app:layout_constraintBottom_toBottomOf="@+id/osmmap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/busqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="#2196F3"
            android:drawableStart="@drawable/baseline_search_24"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"

            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>


    <org.osmdroid.views.MapView
        android:id="@+id/osmmap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnOrigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ubication"
        app:backgroundTint="@color/white"
        android:contentDescription="Vista Usuario"
        app:elevation="6dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="1.02"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnVista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_remove_red_eye_24"
        app:backgroundTint="@color/white"
        app:elevation="6dp"
        android:contentDescription="Vista del mapa"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.13"
        app:layout_constraintHorizontal_bias="1.02"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_lista"
        android:visibility="gone"
        android:elevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/TIL"
        app:layout_constraintStart_toStartOf="@id/TIL"
        app:layout_constraintEnd_toEndOf="@id/TIL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0" />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
