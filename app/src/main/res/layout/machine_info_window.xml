<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/machine_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/carretilla" />

        <TextView
            android:id="@+id/machine_timeonsite"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/fondo2"
            android:gravity="center"
            android:text="11 min"
            android:padding="3dp"
            android:maxLines="1"
            android:visibility="visible"
            android:textColor="@color/black"
            android:layout_marginEnd="4dp"
            android:textSize="12dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/machine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Name"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="wrap_content"


            android:orientation="horizontal">

            <TextView
                android:id="@+id/machine_parking"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/fondo_parking"
                android:text=" P"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/machines_keyin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:background="@drawable/fondo"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/llave" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/fondo"
                android:orientation="horizontal"
                android:padding="2dp"

                >

                <ImageView
                    android:id="@+id/reloj"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reloj" />


                <TextView
                    android:id="@+id/machines_batterytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"

                    android:text="1h 5 min"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/machine_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Machine Address"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>

